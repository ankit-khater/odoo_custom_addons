<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="bill_collection_report">
        <t t-call="report.external_layout">
            <div class="page">
                <div class="oe_structure"/>
                <div class="row">
                    <center>
                        <b>
                            <h4>Detailed Collection Report by Salesperson</h4>
                        </b>
                    </center>
                    <div class="col-xs-5">
                        <p>
                            Date from :
                            <span t-esc="start_date"/>
                            <br/>
                            Date to :
                            <span t-esc="end_date"/>
                        </p>
                    </div>
                    <div class="col-xs-3"></div>
                    <div class="col-xs-4">
                        <p>
                            Printing Date :
                            <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d, %I:%M%p')"/>
                            <br/>
                            Printing By :
                            <span t-esc="user.name"/>
                        </p>
                    </div>
                </div>
                <br/>
                <t t-foreach="data.keys()" t-as="user">
                    <center>
                        <b>
                            <span>Bill User :</span>
                            <span t-esc="user"/>
                        </b>
                    </center>
                    <t t-set="total_sum" t-value="0"/>
                    <table class="table table-condensed" style="border: 1px solid black;">
                        <thead>
                            <tr style="border: 1px solid black;">
                                <th style="border: 1px solid black;">S/N</th>
                                <th style="border: 1px solid black;" width="100px">Date</th>
                                <th style="border: 1px solid black;">Patient Name</th>
                                <th style="border: 1px solid black;">Invoice Number</th>
                                <th style="border: 1px solid black;">Source</th>
                                <th style="border: 1px solid black;">Product Name</th>
                                <th style="border: 1px solid black;">Product Quantity</th>
                                <th style="border: 1px solid black;">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="data[user]" t-as="order">
                                <td style="border: 1px solid black;">
                                    <span t-esc="order_index+1"/>
                                </td>
                                <td style="border: 1px solid black;">
                                    <span t-esc="order[0]"/>
                                </td>
                                <td style="border: 1px solid black;">
                                    <span t-esc="order[5]"/>
                                </td>
                                <td style="border: 1px solid black;">
                                    <span t-esc="order[1]"/>
                                </td>
                                <td style="border: 1px solid black;">
                                    <span t-esc="order[2]"/>
                                </td>
                                <td style="border: 1px solid black;">
                                    <ul t-foreach="order[3]" t-as="s">
                                        <li t-esc="s"/>
                                    </ul>
                                </td>
                                <td style="border: 1px solid black;">
                                    <span t-foreach="order[4]" t-as="s">
                                        <span t-esc="s"/>
                                        <hr/>
                                    </span>
                                </td>
                                <td style="border: 1px solid black;">
                                    <span t-esc="order[6]"/>
                                    <t t-set="total_sum" t-value="total_sum + order[6]"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid black;">
                                </td>
                                <td style="border: 1px solid black;">
                                </td>
                                <td style="border: 1px solid black;">
                                </td>
                                <td style="border: 1px solid black;">
                                </td>
                                <td style="border: 1px solid black;">
                                </td>
                                <td style="border: 1px solid black;">
                                </td>
                                <td style="border: 1px solid black;">
                                    <b>Total Amount:</b>
                                </td>
                                <td style="border: 1px solid black;">
                                    <span t-esc="total_sum"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </div>
        </t>
    </template>
</odoo>